[{
    "name": "theme_info",
    "theme_name": "Elite Shop",
    "theme_version": "0.11.0",
    "theme_author": "Themefisher",
    "theme_documentation_url": "https://shopify.github.io/slate/",
    "theme_support_url": "https://github.com/Shopify/slate"
  },
  {
    "name": "Typography",
    "settings": [{
      "type": "select",
      "id": "type_base_size",
      "label": "Base size",
      "default": "16px",
      "options": [{
          "value": "14px",
          "label": "14px"
        },
        {
          "value": "15px",
          "label": "15px"
        },
        {
          "value": "16px",
          "label": "16px"
        },
        {
          "value": "17px",
          "label": "17px"
        }
      ]
    }]
  },
  {
    "name": "Colors",
    "settings": [{
        "type": "header",
        "content": "General colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary color",
        "default": "#000",
        "info": "Used for text links, and primary buttons"
      },
      {
        "type": "color",
        "id": "color_body_text",
        "label": "Text color",
        "default": "#000",
        "info": "Color used for content and paragraph text"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [{
        "type": "header",
        "content": "Social sharing options"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "label": "Enable sharing for blog articles",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Tweet on Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pin on Pinterest",
        "default": true
      },
      {
        "type": "header",
        "content": "Sharing links"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter link"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook link"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest link"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram link"
      },
      {
        "type": "text",
        "id": "social_snapchat_link",
        "label": "Snapchat link"
      },
      {
        "type": "text",
        "id": "social_tumblr_link",
        "label": "Tumblr link"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "Youtube link"
      },
      {
        "type": "text",
        "id": "social_vimeo_link",
        "label": "Vimeo link"
      }
    ]
  },
  {
    "name": "Social Icons",
    "settings": [{
        "type": "text",
        "id": "facebook_url",
        "label": "Facebook Link",
        "info": "https://facebook.com/shopify"
      },
      {
        "type": "text",
        "id": "twitter_url",
        "label": "Twitter Link",
        "info": "https://twitter.com/shopify"
      },
      {
        "type": "text",
        "id": "pinterest_url",
        "label": "Pinterest Link",
        "info": "https://pinterest.com/shopify"
      },
      {
        "type": "text",
        "id": "instagram_url",
        "label": "Instagram Link",
        "info": "https://instagram.com/shopify"
      }
    ]
  },
  {
    "name": "Payment Methods",
    "settings": [{
        "type": "checkbox",
        "id": "accept_americanexpress",
        "label": "Accept American Express"
      },
      {
        "type": "checkbox",
        "id": "accept_visa",
        "label": "Accept Visa"
      },
      {
        "type": "checkbox",
        "id": "accept_maestro",
        "label": "Accept Maestro"
      },
      {
        "type": "checkbox",
        "id": "accept_discover",
        "label": "Accept Discover"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [{
      "type": "checkbox",
      "id": "cart_notes_enable",
      "label": "Enable cart notes",
      "default": true
    }]
  },
  {
    "name": "Favicon",
    "settings": [{
      "type": "image_picker",
      "id": "favicon",
      "label": "Favicon image",
      "info": "Will be scaled down to 32 x 32px"
    }]
  },
  {
    "name": "Google Map",
    "settings": [{
      "type": "text",
      "id": "map_api",
      "label": "Google Map API",
      "info": "Provide your Map API"
    }]
  },
  {
    "name": "About Page",
    "settings": [{
      "type": "image_picker",
      "id": "about_img",
      "label": "About Page Image"
    }]
  },
  {
    "name": "Contact Page",
    "settings": [{
        "type": "text",
        "id": "location",
        "label": "Location"
      },
      {
        "type": "text",
        "id": "phone",
        "label": "Phone Number"
      },
      {
        "type": "text",
        "id": "email",
        "label": "Email"
      },
      {
        "type": "text",
        "id": "latitude",
        "label": "Map Latitude"
      },
      {
        "type": "text",
        "id": "longitude",
        "label": "Map Longitude"
      }
    ]
  }
]