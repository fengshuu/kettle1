<section class="signin-page account">
  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="block text-center">
          <a class="logo" href="/">
            {% section 'logo' %}
          </a>
          <h2 class="text-center">Create Your Account</h2>
            {% form 'create_customer' %}
            {{ form.errors | default_errors }}
            <div class="form-group">
              <input type="text" class="form-control" name="customer[first_name]" id="FirstName" placeholder="{{ 'customer.register.first_name' | t }}" autofocus {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
            </div>
            <div class="form-group">
              <input  type="text" class="form-control" name="customer[last_name]" id="LastName" placeholder="{{ 'customer.register.last_name' | t }}" {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
            </div>
            <div class="form-group">
              <input type="email" name="customer[email]" id="Email" class="form-control {% if form.errors contains 'email' %}input-error{% endif %}" placeholder="{{ 'customer.register.email' | t }}" value="{% if form.email %}{{ form.email }}{% endif %}">
            </div>
            <div class="form-group">
              <input type="password" name="customer[password]" id="CreatePassword" class="form-control {% if form.errors contains 'password' %}input-error{% endif %}" placeholder="{{ 'customer.register.password' | t }}">
            </div>
            <div class="text-center">
              <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn btn-primary">
            </div>
          {% endform %}
          <p class="mt-3">Already hava an account ? <a href="/account">Login</a></p>
        </div>
      </div>
    </div>
  </div>
</section>